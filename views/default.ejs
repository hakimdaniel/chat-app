<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Console</title>
  <%- include('partials/font') %>
  <link rel="stylesheet" type="text/css" href="assets/style.css">
  <style>
  	body{
  		padding: 20px;
  	}
    input{
      color: black;
      display: block;
      width: 100%;
      border: none;
      outline: none;
      margin: 5px 0;
    }
    textarea{
      width: 100%;
      border: none;
      outline: none;
      resize: vertical;
    }
    .op{
      color: red;
      font-weight: bold;
    }
    .chat{
    	margin-top: 20px;
      padding: 12px;
      height: 300px;
      border-radius: 12px;
      overflow-wrap:anywhere;
      border: solid black 1px;
      background: gray;
    }
    #msg{
    	color: black;
    }#send{
    	color: black;
    	padding: 2px 12px;
    	cursor: pointer;
    }
    .animate{
      display: inline-block;
      box-shadow: 0 5px 5px rgba(0,0,0,0.255);
    }
  </style>
</head>
<body>
  <div style="width: 400px;">
  <input type="text" value="&lt;span class='op'&gt;Server&lt;/span&gt; : " id="preffix">
  <textarea type="text" id="msg" placeholder="message..." rows="6" cols="50" autofocus="true"></textarea>
  <button id="send">send</button>
  </div>
<div class="chat">
  
</div>
<script>
const key = "cQEfzvFidNwt2HeJ60Gk<>";
const form = document.getElementById("form")
const msg = document.getElementById("msg")
const preffix = document.getElementById("preffix")
const btn = document.getElementById("send")
const protocol = location.protocol === "https:" ? "wss" : "ws";
const ws = new WebSocket(`${protocol}://${location.host}`); // 1

function send(msg){
  ws.send(key+msg)
}

ws.onmessage = (event) =>{
  const span = document.createElement("span")
  span.innerHTML += "<br>"+event.data;
  document.querySelector(".chat").appendChild(span)
}
btn.addEventListener("click",()=>{
  send(`${"<span class='animate'>"+preffix.value+msg.value.trim()+"<span>"}`)
})
</script>
</body>
</html>